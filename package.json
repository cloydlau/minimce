{
  "name": "minimce",
  "version": "0.4.8",
  "private": false,
  "description": "Offline TinyMCE Vue wrapper",
  "author": "cloydlau",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloydlau/minimce"
  },
  "keywords": [
    "tinymce",
    "offline",
    "vue",
    "richtext",
    "rich text",
    "rich editor",
    "rich text editor",
    "rte",
    "editor",
    "word",
    "wps",
    "doc",
    "docx",
    "office",
    "WYSIWYG",
    "vue-demi"
  ],
  "exports": {
    ".": {
      "require": "./dist/minimce.umd.js",
      "import": "./dist/minimce.mjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/minimce.umd.js",
  "module": "./dist/minimce.mjs",
  "scripts": {
    "dev": "pnpm switch3 && vite --config ./demo/vue3/vite.config.ts --open",
    "dev2.7": "pnpm switch2.7 && vite --config ./demo/vue2.7/vite.config.ts --open",
    "dev2": "pnpm switch2 && vite --config ./demo/vue2/vite.config.ts --open",
    "switch3": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 3",
    "switch2.7": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 2.7",
    "switch2": "deno run --allow-run --allow-read --allow-write ./scripts/switch-vue.js 2",
    "build": "vite build",
    "serve": "vite preview",
    "clean": "rd /s /q .\\node_modules",
    "ri": "npm run clean && pnpm i",
    "u": "deno run --allow-run scripts/upgrade.js",
    "r": "node scripts/release.js",
    "rs": "node scripts/release.js --straightforward",
    "test": "vitest --config ./vitest.config.ts",
    "test2": "vitest --config ./vitest.vue2.config.ts",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "tinymce": "^6",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "cozyalert": "latest",
    "kayran": "latest",
    "lodash-es": "latest",
    "uuid": "latest",
    "vue-demi": "latest",
    "vue-global-config": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "axios": "latest",
    "axios-shortcut": "latest",
    "chalk": "^4.1.2",
    "enquirer": "latest",
    "eslint": "latest",
    "execa": "^4.1.0",
    "husky": "latest",
    "jsdom": "latest",
    "json-editor-vue": "latest",
    "lint-staged": "latest",
    "mammoth": "latest",
    "minimce": "latest",
    "minimist": "latest",
    "qs": "latest",
    "sass": "latest",
    "semver": "latest",
    "tinymce": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest",
    "@vue/composition-api": "latest",
    "@vue/test-utils": "1",
    "element-ui": "latest",
    "vite-plugin-vue2": "latest",
    "vue": "~2.6",
    "vue-template-compiler": "~2.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  },
  "stackblitz": {
    "startCommand": "npm run test"
  }
}