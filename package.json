{
  "name": "minimce",
  "PascalCasedName": "MiniMCE",
  "version": "0.8.0",
  "private": false,
  "packageManager": "pnpm@7.18.2",
  "description": "Rich text editor, offline TinyMCE Vue 2.6 / 2.7 / 3 wrapper, supports Nuxt 2 / 3.",
  "author": "cloydlau",
  "license": "MIT",
  "repository": "https://github.com/cloydlau/minimce",
  "keywords": [
    "tinymce",
    "offline",
    "vue",
    "richtext",
    "rich-text",
    "rte",
    "editor",
    "word",
    "wps",
    "doc",
    "docx",
    "office",
    "WYSIWYG",
    "vue-demi",
    "microsoft-office",
    "nuxt",
    "nuxtjs",
    "ssr",
    "microfrontends",
    "wujie"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/minimce.umd.js",
      "import": "./dist/minimce.mjs"
    },
    "./*": "./*"
  },
  "main": "./dist/minimce.umd.js",
  "module": "./dist/minimce.mjs",
  "unpkg": "./dist/minimce.umd.js",
  "jsdelivr": "./dist/minimce.umd.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "dev3": "cl switchVue 3 && vite --config ./demo/vue3/vite.config.ts --open",
    "dev2.7": "cl switchVue 2.7 && vite --config ./demo/vue2.7/vite.config.ts --open",
    "dev2.6": "cl switchVue 2.6 && vite --config ./demo/vue2.6/vite.config.ts --open",
    "build": "vite build",
    "serve": "vite preview",
    "doc": "vitepress dev --open /README",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "npx case-police --fix --ignore \"./demo/langs\" && npx lint-staged && pnpm build && cl release"
  },
  "peerDependencies": {
    "@vue/composition-api": ">=1",
    "tinymce": ">=6",
    "vue": "2 || 3"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "uuid": "^9.0.0",
    "vue-demi": "^0.13.11",
    "vue-global-config": "^0.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.15",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-vue": "latest",
    "@vitest/coverage-c8": "^0.25.8",
    "@vitest/ui": "^0.25.8",
    "@vue/compiler-sfc": "latest",
    "@vue/test-utils": "latest",
    "axios": "^1.2.1",
    "axios-shortcut": "^0.1.1",
    "case-police": "^0.5.10",
    "element-plus": "latest",
    "eslint": "^8.29.0",
    "happy-dom": "^8.1.0",
    "husky": "^8.0.2",
    "json-editor-vue": "^0.10.2",
    "lint-staged": "^13.1.0",
    "mammoth": "^1.5.1",
    "minimce": "^0.7.0",
    "qs": "^6.11.0",
    "sass": "^1.56.2",
    "sweetalert2": "^11.6.15",
    "sweetalert2-preset": "^0.2.0",
    "tinymce": "^6.3.1",
    "typescript": "^4.9.4",
    "unplugin-auto-import": "^0.12.1",
    "vanilla-jsoneditor": "^0.11.4",
    "vite": "3.2.5",
    "vite-plugin-dts": "^1.7.1",
    "vitepress": "^1.0.0-alpha.31",
    "vitest": "^0.25.8",
    "vue": "latest"
  },
  "lint-staged": {
    "{src,__tests__}/**.*": [
      "eslint --fix"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}