{
  "name": "minimce",
  "version": "0.4.8",
  "private": false,
  "description": "Rich text editor, offline TinyMCE Vue wrapper",
  "author": "cloydlau",
  "license": "MIT",
  "repository": "https://github.com/cloydlau/minimce",
  "keywords": [
    "tinymce",
    "offline",
    "vue",
    "richtext",
    "rich text",
    "rich editor",
    "rich text editor",
    "rte",
    "editor",
    "word",
    "wps",
    "doc",
    "docx",
    "office",
    "WYSIWYG",
    "vue-demi",
    "富文本",
    "离线"
  ],
  "exports": {
    ".": {
      "require": "./dist/minimce.umd.js",
      "import": "./dist/minimce.mjs",
      "browser": "./dist/minimce.mjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/minimce.umd.js",
  "module": "./dist/minimce.mjs",
  "scripts": {
    "dev": "pnpm switch3 && vite --config ./demo/vue3/vite.config.ts --open",
    "dev2.7": "pnpm switch2.7 && vite --config ./demo/vue2.7/vite.config.ts --open",
    "dev2": "pnpm switch2 && vite --config ./demo/vue2/vite.config.ts --open",
    "switch3": "cl switchVue 3 --vue2deps \"element-ui\" --vue3deps \"element-plus\"",
    "switch2.7": "cl switchVue 2.7 --vue2deps \"element-ui\" --vue3deps \"element-plus\"",
    "switch2": "cl switchVue 2 --vue2deps \"element-ui\" --vue3deps \"element-plus\"",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest --config ./vitest.config.ts",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "tinymce": "^6",
    "vue": "^2 || >=3"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "cozyalert": "latest",
    "kayran": "latest",
    "lodash-es": "latest",
    "uuid": "latest",
    "vue-demi": "latest",
    "vue-global-config": "latest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "@cloydlau/scripts": "latest",
    "@vitejs/plugin-vue": "latest",
    "@vue/compiler-sfc": "latest",
    "axios": "latest",
    "axios-shortcut": "latest",
    "element-plus": "latest",
    "eslint": "latest",
    "husky": "latest",
    "jsdom": "latest",
    "json-editor-vue": "latest",
    "lint-staged": "latest",
    "mammoth": "latest",
    "minimce": "latest",
    "qs": "latest",
    "sass": "latest",
    "tinymce": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest",
    "@vue/test-utils": "latest",
    "vue": "latest"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  },
  "stackblitz": {
    "startCommand": "npm run test"
  }
}
